{
  "$schema": "https://schema.tauri.app/config/2.0.0/capability.json",
  "identifier": "main-capability",
  "description": "Main application capabilities for window management",
  "context": "local",
  "windows": ["main"],
  "permissions": [
    "core:window:allow-set-fullscreen",
    "core:window:allow-is-fullscreen",
    "dialog:default",
    "fs:allow-read-file",
    "fs:allow-write-text-file",
    "fs:allow-read-dir",
    "fs:allow-create",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:write-all",
    "fs:read-all",
    {
      "identifier": "fs:scope",
      "allow": ["**"]
    },
    "shell:allow-open"
  ]
}
